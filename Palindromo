package palindromo;


import java.util.Scanner;
public class Palindromo {

    /**
     * @param args the command line arguments
     */
    public static boolean palindromo(String palabra)
    {
        for (int i= 0; i < palabra.length(); i++)
        {
            if (palabra.charAt(i) != palabra.charAt(palabra.length() - i - 1))
            {
                return false;
            }
        } 
        return true;
    }
    public static void main(String[] args) {
      
        String palabra;
        Scanner teclado = new Scanner(System.in);
        System.out.print("Write the word you want to know if it's palindrome or not");
        palabra = teclado.next();
        
        if(palindromo(palabra) == true)
        {
            System.out.printf("la frase\"%s\" es un palindromo", palabra);
        } 
        else
        {
            System.out.printf("la frase\"%s\" no es un palindromo", palabra);
            
        }
        
        
    }
    
}
